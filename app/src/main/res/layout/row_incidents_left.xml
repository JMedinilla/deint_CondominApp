<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/rowIncLeft_imgLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/contentdescription_imageview"
        android:src="@mipmap/row_incident" />

    <TextView
        android:id="@+id/rowIncLeft_txtTitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/rowIncLeft_imgLogo"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/rowIncLeft_txtDate"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/rowIncLeft_txtTitle"
        android:layout_toEndOf="@id/rowIncLeft_imgLogo"
        android:gravity="center"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/rowIncLeft_txtAuthor"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/rowIncLeft_txtDate"
        android:layout_toEndOf="@id/rowIncLeft_imgLogo"
        android:gravity="center"
        android:textColor="@color/colorPrimary" />

</RelativeLayout>